        </dependency>
        <!-- https://mvnrepository.com/artifact/org.jaunt-lang/jaunt -->
        <dependency>
            <groupId>org.jaunt-lang</groupId>
            <artifactId>jaunt</artifactId>
            <version>1.9.0-RC1</version>
        </dependency>


        <dependency>
            <groupId>net.htmlparser.jericho</groupId>
